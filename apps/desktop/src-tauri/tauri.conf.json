{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Disk Analyzer",
  "version": "0.1.0",
  "identifier": "com.ai-disk-analyzer.desktop",
  "build": {
    "beforeDevCommand": "npm run frontend:dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run frontend:build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "AI 磁盘分析工具",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "AI 驱动的智能磁盘分析与整理工具",
    "longDescription": "帮助用户快速整理磁盘上的无用文件，对冷数据提供迁移方案与建议"
  },
  "plugins": {}
}
